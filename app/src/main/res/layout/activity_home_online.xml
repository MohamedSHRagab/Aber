<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_online"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/ic_menu_black_24dp"
        android:tint="#242e42"
        android:layout_gravity="center"
        android:id="@+id/back"
        android:paddingLeft="-30dp"
        android:onClick="go_navigation"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#242a37"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="3sp"
        android:text="Online"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"

        />
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:paddingRight="30dp"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:background="#ff8900"
        android:onClick="go_home_page2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icons_money_1"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#242a37"
            android:lineSpacingExtra="5sp"
            android:text="You have 10 new requests."
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/lin2"/>
</RelativeLayout>