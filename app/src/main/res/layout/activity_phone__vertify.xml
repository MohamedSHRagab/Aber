<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phone_Vertify"
    android:background="#ffffff">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:tint="@color/yellow"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/back"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textColor="#242a37"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="7sp"
        android:text="@string/phone_vertify"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/back"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:gravity="center"
        android:layout_alignStart="@id/title"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3sp"
        android:textColor="#242a37"
        android:textSize="17sp"
        android:text="@string/enter_code"
        android:layout_alignLeft="@id/title" /> />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/linear"
        android:layout_below="@id/description">
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="40dp"
            android:hint="4"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:maxLines="1"
            android:hint="5"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:maxLines="1"
            android:hint="3"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:maxLines="1"
            android:hint="2"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="actionNext" />
    </LinearLayout>
    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/vertify"
        android:background="@drawable/buttonformal"
        android:textColor="#0a1f44"
        android:textSize="17sp"
        android:onClick="go_home_page"/>

</RelativeLayout>